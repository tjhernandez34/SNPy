<h1 class="h1">Hello, <%= current_user.first_name %></h1>
<div><%= link_to "Upload Genome", new_genome_path, :class => "btn" %></div>

<% if current_user.genomes %>
	<div id = "home_search">
	  <%= form_tag("/search", method: "get") do %>
		    <%= text_field_tag :search, params[:search], :placeholder => "enter illness", id: "box", class: "form_field" %>
		  <div>
		  	<%= submit_tag("Search", :class => "btn", id: "search-button") %>
		  </div>
		<% end %>
	</div>
<% else %>
  <p>Please upload genome, <%= current_user.first_name %></p>
<% end %>


<button class="chartbutton btn" id="positive10" href="/search/bottom_10"> Healthy Genes </button>
<button class="chartbutton btn" id="zoombutton" href="/sunburst"> Zoom Zoom </button>
<button class="chartbutton btn" id="negative10" href="/search/top_10"> Risk Genes </button>
