<%= form_for User.new do |f| %>
<h2>sign up</h2>
<%= f.text_field :first_name, :placeholder => "First Name", :class => "form-field first_name" %>
<%= f.text_field :last_name, :placeholder => "Last Name", :class => "form-field last_name" %>
<%= f.text_field :username, :placeholder => "Username", :class => "form-field username" %>
<%= f.email_field :email, :placeholder => "Email", :class => "form-field email" %>
<%= f.password_field :password, :placeholder => "Password", :class => "form-field password" %>
<%= f.select(:doctor, [['Doctor', true], ['User', false]]) %>
<%= f.submit "sign up", :class => "form-btn submit" %>
<% end %>
